<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".presentations.mainHome.otherScreens.MentorTaskDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/iv_task_details_arrow_back"
        android:layout_width="33dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintEnd_toStartOf="@+id/tv_task_details_header"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_programs_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="472dp"
        android:text="@string/bio_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/tv_task_details_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_task_details_title"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_task_details_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="164dp"
        android:text="Task Details"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_task_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="12dp"
        android:text="Room library write article write"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_task_details_header" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/start"
        style="@style/MMButtonOutlined"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="152dp"
        android:padding="12dp"
        android:paddingVertical="12dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_programs_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_programs_description"
        app:layout_constraintVertical_bias="0.211" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/complete"
        style="@style/MMButtonOutlined"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:padding="12dp"
        android:text="Complete"
        app:layout_constraintBottom_toBottomOf="@+id/start"
        app:layout_constraintEnd_toEndOf="@+id/tv_programs_description"
        app:layout_constraintTop_toTopOf="@+id/start" />


</androidx.constraintlayout.widget.ConstraintLayout>