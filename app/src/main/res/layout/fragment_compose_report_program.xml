<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.reports.screens.ComposeReportFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cps_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cps_case"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/action_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/go_back"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/MMS_black_2" />

            <TextView
                android:id="@+id/toolbar_create_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:textColor="@color/MMS_black_2"
                android:textSize="18sp"
                app:fontFamily="@font/mukta_extrabold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/action_back"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/compose_report" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/cps_choose_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:textColor="@color/MMS_black_2"
        android:textSize="16sp"
        app:fontFamily="@font/mukta_semibold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cps_toolbar"
        tools:text="@string/choose_report" />

    <ImageView
        android:id="@+id/program_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/_8sdp"
        android:contentDescription="@string/go_back"
        android:padding="4dp"
        android:src="@drawable/ic_ellipse_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cps_choose_txt" />

    <TextView
        android:id="@+id/program_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:textColor="@color/MMS_black_5"
        android:textSize="@dimen/_12ssp"
        app:fontFamily="@font/mukta_light"
        app:layout_constraintBottom_toBottomOf="@id/program_indicator"
        app:layout_constraintStart_toEndOf="@id/program_indicator"
        app:layout_constraintTop_toTopOf="@id/program_indicator"
        tools:text="@string/program" />

    <ImageView
        android:id="@+id/task_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/_8sdp"
        android:contentDescription="@string/go_back"
        android:padding="4dp"
        android:src="@drawable/ic_ellipse_light"
        app:layout_constraintStart_toEndOf="@id/program_txt"
        app:layout_constraintTop_toBottomOf="@id/cps_choose_txt" />

    <TextView
        android:id="@+id/task_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:textColor="@color/MMS_black_5"
        android:textSize="@dimen/_12ssp"
        app:fontFamily="@font/mukta_light"
        app:layout_constraintBottom_toBottomOf="@id/task_indicator"
        app:layout_constraintStart_toEndOf="@id/task_indicator"
        app:layout_constraintTop_toTopOf="@id/task_indicator"
        tools:text="@string/task" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_program_field"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingHorizontal="@dimen/margin_40"
        android:textAllCaps="false"
        android:textColor="@color/MMS_black_2"
        android:textSize="@dimen/_8ssp"
        app:backgroundTint="@android:color/white"
        app:cornerRadius="5dp"
        app:fontFamily="@font/montserrat_semibold"
        app:layout_constraintStart_toStartOf="@+id/cps_choose_txt"
        app:layout_constraintTop_toBottomOf="@id/program_txt"
        app:strokeColor="@color/MMS_black_2"
        app:strokeWidth="@dimen/_1sdp"
        tools:text="Select Program" />

    <TextView
        android:id="@+id/gads_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="start"
        android:text="@string/gads_program_underline"
        android:textColor="@color/MMS_black_2"
        android:textSize="@dimen/_12ssp"
        app:fontFamily="@font/mukta_regular"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_program_field" />

    <ImageView
        android:id="@+id/cancel_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/_4sdp"
        android:contentDescription="@string/go_back"
        android:src="@drawable/ic_cancel_vector"
        app:layout_constraintStart_toEndOf="@id/gads_txt"
        app:layout_constraintTop_toTopOf="@id/gads_txt" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/field_label"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginVertical="@dimen/_8sdp"
        app:boxStrokeColor="@color/title_grey_color"
        app:boxStrokeWidth="0.5dp"
        app:hintTextColor="@color/title_grey_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gads_txt">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:hint="@string/report_title"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/title_grey_color" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/field_label2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginVertical="@dimen/_8sdp"
        app:boxStrokeColor="@color/title_grey_color"
        app:boxStrokeWidth="0.5dp"
        app:hintTextColor="@color/title_grey_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field_label">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:hint="@string/major_achievement"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:lines="3"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textColorHint="@color/title_grey_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/field_label3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginVertical="@dimen/_8sdp"
        app:boxStrokeColor="@color/title_grey_color"
        app:boxStrokeWidth="0.5dp"
        app:hintTextColor="@color/title_grey_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field_label2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:hint="@string/major_blocker"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:lines="3"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textColorHint="@color/title_grey_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/field_label4"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginVertical="@dimen/_8sdp"
        app:boxStrokeColor="@color/title_grey_color"
        app:boxStrokeWidth="0.5dp"
        app:hintTextColor="@color/title_grey_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field_label3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:hint="@string/major_recommendations"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:lines="3"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textColorHint="@color/title_grey_color" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_compose_field"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/montserrat_regular"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:backgroundTint="#035D63"
        app:cornerRadius="10dp"
        app:fontFamily="@font/montserrat_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Submit Report" />

</androidx.constraintlayout.widget.ConstraintLayout>