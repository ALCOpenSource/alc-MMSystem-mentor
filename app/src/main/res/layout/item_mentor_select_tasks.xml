<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mst_bg"
        >

        <ImageView
            android:id="@+id/box_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_24"
            android:layout_marginVertical="@dimen/margin_14"
            android:src="@drawable/ic_task"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/google_icon" />

        <TextView
            android:id="@+id/ist_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:text="@string/room_course"
            android:textColor="@color/MMS_black_2"
            android:fontFamily="@font/mukta_semibold"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/box_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/box_icon"/>

        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/_24sdp"
            android:src="@drawable/ic_calendar"
            app:layout_constraintStart_toEndOf="@id/box_icon"
            app:layout_constraintTop_toBottomOf="@id/ist_txt"
            android:contentDescription="@string/google_icon" />

        <TextView
            android:id="@+id/isp_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/margin_14"
            android:text="@string/days_from_now"
            android:textSize="12sp"
            android:textColor="@color/MMS_black_5"
            app:layout_constraintStart_toEndOf="@id/calendar_icon"
            app:layout_constraintTop_toBottomOf="@id/ist_txt"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/task_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_14"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/assigned"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/download_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</FrameLayout>