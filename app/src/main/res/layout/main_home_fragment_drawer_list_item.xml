<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mainHomeFragmentDrawerItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="?colorOnBackground"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/startGuideLine"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:id="@+id/mainHomeFragmentDrawerItemLabel"
        android:text="@string/draweer_item_ph"
        android:textColor="?colorOnBackground"
        app:layout_constraintBottom_toBottomOf="@id/mainHomeFragmentDrawerItemIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mainHomeFragmentDrawerItemIcon"
        app:layout_constraintTop_toTopOf="@id/mainHomeFragmentDrawerItemIcon" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/activity_vertical_margin" />
</androidx.constraintlayout.widget.ConstraintLayout>