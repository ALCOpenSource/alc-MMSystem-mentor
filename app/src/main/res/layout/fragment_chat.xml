<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.messages.screens.ChatFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/_32sdp" />

    <RelativeLayout
        android:id="@+id/start_of_conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chat_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_32sdp">

        <View
            android:id="@+id/start"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@color/title_grey_color"
            />

        <TextView
            android:id="@+id/conversation_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/start"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="@string/start_of_conversation"
            android:textColor="@color/title_grey_color"/>

        <View
            android:id="@+id/end"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/conversation_started"
            android:background="@color/title_grey_color"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/start_of_conversation">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messages_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/start_of_conversation" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp">
        
        <RelativeLayout
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_gray_background"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_2sdp">

            <ImageView
                android:id="@+id/emojis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/add_emojis"
                android:src="@drawable/emoji_happy"/>

            <EditText
                android:id="@+id/write_message"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:layout_toEndOf="@id/emojis"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_32sdp"
                android:hint="@string/place_holder_text"
                android:inputType="text"
                android:importantForAutofill="no" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/write_message"
                android:layout_centerVertical="true"
                android:contentDescription="@string/attach_files"
                android:src="@drawable/attach_icon" />
            
        </RelativeLayout>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/send_message"
            android:src="@drawable/send_icon"
            app:tint="@color/primary_color_2"/>
        
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>