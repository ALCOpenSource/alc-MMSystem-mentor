        <TextView
            android:id="@+id/tvProfileUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/francess_roseline"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfileView"
            style="@style/MMCircleProfileView"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/tvProfileUserName"/>

        <TextView
            android:id="@+id/tvProfileHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/francess_roseline"
            android:textSize="16sp"
            android:textStyle="normal"
            android:drawablePadding="4dp"
            app:drawableEndCompat="@drawable/flag_nigeria"
            app:layout_constraintBottom_toBottomOf="@id/ivProfileView"
            app:layout_constraintStart_toEndOf="@id/ivProfileView"
            app:layout_constraintTop_toTopOf="@id/ivProfileView" />
        <TextView
            android:id="@+id/tvProfileMentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mentor"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/tvProfileHeadline"
            app:layout_constraintTop_toBottomOf="@id/tvProfileHeadline"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivProfileView"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="0dp"
            app:tabPaddingTop="0dp"
            app:tabPaddingBottom="0dp"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@null"
            android:tabStripEnabled="false"
            app:tabRippleColor="@null">

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:backgroundTint="@color/white"
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout" />



