<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"

        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="200dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mukta_bold"
                android:text="@string/become_a_mentor"
                android:textColor="@color/mms_pry_2"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mukta_semi_bold"
                android:text="@string/fill_in_the_form_below"
                android:textColor="@color/mms_black_2"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/mukta_regular"
                android:text="@string/page_4_of_4"
                android:textColor="@color/mms_black_2"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/mukta_bold"
                android:text="@string/documents"
                android:textColor="@color/mms_black_2"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rl_docs_upload"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_chips_rectangle"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <TextView
                    android:id="@+id/chooseDocOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/mukta_regular"
                    android:text="@string/choose"
                    android:textColor="@color/mms_pry_2"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/deleteDocTwo"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/selectedDocOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/mukta_regular"
                    android:textColor="@color/mms_black_3"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/chooseDocOne"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/chooseDocOne" />

                <ImageView
                    android:id="@+id/deleteDocTwo"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/delete"
                    android:src="@drawable/ic_delete"
                    app:layout_constraintBottom_toBottomOf="@+id/chooseDocOne"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/chooseDocOne"
                    app:tint="@color/mms_pry_2" />

                <TextView
                    android:id="@+id/chooseDocTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/mukta_regular"
                    android:text="@string/choose"
                    android:textColor="@color/mms_pry_2"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/selectedDocTwo"
                    app:layout_constraintEnd_toStartOf="@+id/deleteDocTwo"
                    app:layout_constraintStart_toStartOf="@+id/chooseDocOne"
                    app:layout_constraintTop_toTopOf="@+id/selectedDocTwo" />

                <TextView
                    android:id="@+id/selectedDocTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    android:fontFamily="@font/mukta_light"
                    android:textColor="@color/mms_black_3"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/selectedDocOne"
                    app:layout_constraintTop_toBottomOf="@+id/selectedDocOne" />

                <ImageView
                    android:id="@+id/deleteDocOne"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/delete"
                    android:src="@drawable/ic_delete"
                    app:layout_constraintBottom_toBottomOf="@+id/chooseDocTwo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/selectedDocTwo"
                    app:tint="@color/mms_pry_2" />


                <TextView
                    android:id="@+id/chooseDocThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/mukta_regular"

                    android:text="@string/choose"
                    android:textColor="@color/mms_pry_2"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/deleteDocTwo"
                    app:layout_constraintStart_toStartOf="@+id/chooseDocTwo"
                    app:layout_constraintTop_toTopOf="@+id/selectedDocThree" />

                <TextView
                    android:id="@+id/selectedDocThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mukta_light"
                    android:textColor="@color/mms_black_3"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/selectedDocTwo"
                    app:layout_constraintTop_toBottomOf="@+id/selectedDocTwo" />

                <ImageView
                    android:id="@+id/deleteDocThree"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/delete"
                    android:src="@drawable/ic_delete"
                    app:layout_constraintBottom_toBottomOf="@+id/chooseDocThree"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/selectedDocThree"
                    app:tint="@color/mms_pry_2" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_docs_upload"
                android:layout_width="145dp"
                android:layout_height="40dp"

                android:fontFamily="@font/mukta_light"
                android:text="@string/upload_documents"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="5dp"

                app:layout_constraintEnd_toEndOf="@+id/rl_docs_upload"
                app:layout_constraintTop_toBottomOf="@+id/rl_docs_upload" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/mukta_bold"
                android:text="@string/social"
                android:textColor="@color/mms_black_2"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/btn_docs_upload" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView1"
                app:layout_constraintTop_toBottomOf="@+id/textView1">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/ic_globe"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/mukta_regular"
                    android:hint="@string/website"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView1"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/ic_github"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/mukta_regular"
                    android:hint="@string/github"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_instagram"
                android:drawablePadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView1"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/ic_instagram"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/mukta_regular"
                    android:hint="@string/instagram"

                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout7"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout3"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/ic_linkedin"
                    android:drawablePadding="50dp"
                    android:fontFamily="@font/mukta_regular"
                    android:hint="@string/linkedin"

                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout8"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout3"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout7">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/ic_twitter"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/mukta_regular"
                    android:hint="@string/twitter"

                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_up_two_next"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/mukta_semi_bold"
                android:text="@string/on_boarding_btn_next"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_up_two_prev"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:fontFamily="@font/mukta_semi_bold"
                android:text="@string/on_boarding_btn_prev"
                android:textAllCaps="false"
                android:textSize="18sp"

                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="@color/mms_pry_2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

