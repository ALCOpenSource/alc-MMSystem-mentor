<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardElevation="0dp"
    android:elevation="0dp"
    android:id="@+id/btn_search_list_item_container"
    android:layout_marginHorizontal="16dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
    app:strokeColor="@color/mm_outline"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/search_list_item_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:shapeAppearanceOverlay="@style/circleImageShape"
            app:srcCompat="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/search_list_item_title"
            android:textColor="@color/mm_search_title_color"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:gravity="center|start"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@id/search_list_item_img"
            app:layout_constraintEnd_toStartOf="@id/search_list_item_location"
            app:layout_constraintStart_toEndOf="@id/search_list_item_img"
            app:layout_constraintTop_toTopOf="@id/search_list_item_img"
            tools:text="Google Africa Scholarshop Program" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/search_list_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/in_programs"
            android:textColor="?colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/search_list_item_img"
            app:layout_constraintStart_toEndOf="@id/search_list_item_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>