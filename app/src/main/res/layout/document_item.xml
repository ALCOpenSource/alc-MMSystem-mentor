<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">



    <ImageView
        android:id="@+id/ivDocIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="16px"
        android:minHeight="16px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/file_icon" />
    <TextView
        android:id="@+id/tvDocTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/ivDocIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@id/ivDocIcon"/>
</androidx.constraintlayout.widget.ConstraintLayout>