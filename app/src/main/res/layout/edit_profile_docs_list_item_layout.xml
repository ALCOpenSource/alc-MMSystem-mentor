<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit_profile_doc_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="My resume.pdf"
        android:ellipsize="middle"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/mms_black_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_profile_doc_select_action"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit_profile_doc_select_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mms_choose"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/mms_pry_2"
        app:layout_constraintBottom_toBottomOf="@id/edit_profile_doc_label"
        app:layout_constraintEnd_toStartOf="@id/edit_profile_doc_delete_action"
        app:layout_constraintTop_toTopOf="@id/edit_profile_doc_label" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_profile_doc_delete_action"
        style="@style/MMIconBtn"
        app:icon="@drawable/ic_trash_delete_bin"
        app:layout_constraintBottom_toBottomOf="@id/edit_profile_doc_select_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_profile_doc_select_action" />

</androidx.constraintlayout.widget.ConstraintLayout>