<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/discussion_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
    app:strokeColor="@color/mm_outline">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <include
            android:id="@+id/discussionItemHeaderLayout"
            layout="@layout/profile_header_layout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imageView8"
            style="@style/MMIconBtn"
            app:icon="@drawable/ic_baseline_more_horiz_24"
            app:layout_constraintBottom_toBottomOf="@id/discussionItemHeaderLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/discussionItemHeaderLayout" />


        <TextView
            android:id="@+id/tv_discussion_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/bio_description"
            android:textColor="@color/mms_black_5"
            app:layout_constraintEnd_toEndOf="@+id/tv_discussion_title"
            app:layout_constraintStart_toStartOf="@+id/tv_discussion_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_discussion_title" />

        <TextView
            android:id="@+id/tv_discussion_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="The New MMS Discussion Forum"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/discussionItemHeaderLayout"
            app:layout_constraintTop_toBottomOf="@id/discussionItemHeaderLayout" />

        <ImageView
            android:id="@+id/iv_bookmark_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_message_discussion"
            app:layout_constraintStart_toEndOf="@+id/iv_message_discussion"
            app:layout_constraintTop_toTopOf="@+id/iv_message_discussion"
            app:srcCompat="@drawable/ic_baseline_bookmark_border_24"
            app:tint="@color/mms_black_5" />

        <ImageView
            android:id="@+id/iv_edit_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bookmark_discussion"
            app:layout_constraintStart_toEndOf="@+id/iv_bookmark_discussion"
            app:layout_constraintTop_toTopOf="@+id/iv_bookmark_discussion"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_edit_24"
            app:tint="@color/mms_black_5" />

        <ImageView
            android:id="@+id/iv_message_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/tv_discussion_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_discussion_description"
            app:srcCompat="@drawable/ic_comment_circle_chat_message"
            app:tint="@color/mms_black_5" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_edit_discussion"
            app:layout_constraintEnd_toStartOf="@id/tv_discussion_time"
            app:layout_constraintTop_toTopOf="@+id/iv_edit_discussion"
            app:srcCompat="@drawable/ic_baseline_access_time_24"
            app:tint="@color/mms_black_5" />

        <TextView
            android:id="@+id/tv_discussion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5hr ago"
            android:textColor="@color/mms_black_5"
            app:layout_constraintBottom_toBottomOf="@id/imageView16"
            app:layout_constraintEnd_toEndOf="@+id/tv_discussion_description"
            app:layout_constraintTop_toTopOf="@id/imageView16" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>