<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discussion_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:layout_marginHorizontal="16dp"
    app:cardElevation="0dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
    app:strokeColor="@color/mm_outline">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfileView"
            style="@style/MMCircleProfileView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_mentor_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.829"
            app:layout_constraintStart_toEndOf="@+id/tv_mentor_name"
            app:layout_constraintTop_toTopOf="@+id/tv_mentor_name"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_baseline_more_horiz_24" />

        <TextView
            android:id="@+id/tv_mentor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Samuel Kabede"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivProfileView"
            app:layout_constraintTop_toTopOf="@+id/ivProfileView" />

        <TextView
            android:id="@+id/tv_mentor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Mentor Manger"
            app:layout_constraintBottom_toBottomOf="@+id/ivProfileView"
            app:layout_constraintEnd_toEndOf="@+id/tv_mentor_name"
            app:layout_constraintHorizontal_bias="0.344"
            app:layout_constraintStart_toStartOf="@+id/tv_mentor_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_mentor_name" />

        <TextView
            android:id="@+id/tv_discussion_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/bio_description"
            app:layout_constraintEnd_toEndOf="@+id/tv_discussion_title"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="@+id/tv_discussion_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_discussion_title" />

        <TextView
            android:id="@+id/tv_discussion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="The New MMS Discussion Forum"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ivProfileView"
            app:layout_constraintTop_toBottomOf="@+id/ivProfileView" />

        <ImageView
            android:id="@+id/iv_bookmark_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_message_discussion"
            app:layout_constraintStart_toEndOf="@+id/iv_message_discussion"
            app:layout_constraintTop_toTopOf="@+id/iv_message_discussion"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_bookmark_border_24" />

        <ImageView
            android:id="@+id/iv_edit_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bookmark_discussion"
            app:layout_constraintStart_toEndOf="@+id/iv_bookmark_discussion"
            app:layout_constraintTop_toTopOf="@+id/iv_bookmark_discussion"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/iv_message_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/tv_discussion_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_discussion_description"
            app:srcCompat="@drawable/ic_messages" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="168dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_edit_discussion"
            app:layout_constraintStart_toEndOf="@+id/iv_edit_discussion"
            app:layout_constraintTop_toTopOf="@+id/iv_edit_discussion"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_access_time_24" />

        <TextView
            android:id="@+id/tv_discussion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5hr ago"
            app:layout_constraintBottom_toBottomOf="@+id/iv_message_discussion"
            app:layout_constraintEnd_toEndOf="@+id/tv_discussion_description"
            app:layout_constraintHorizontal_bias="0.731"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            app:layout_constraintTop_toTopOf="@+id/iv_message_discussion"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>