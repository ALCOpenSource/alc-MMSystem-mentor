<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcMMSystemmentor" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mms_pry_2</item>
        <item name="colorPrimaryVariant">@color/mms_pry_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mms_pry_2</item>
        <item name="colorPrimaryVariant">@color/mms_pry_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/white</item>

    </style>


    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Colors_Widget.MaterialComponents.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/color_filter_chip_background_color</item>
        <item name="android:textColor">@color/color_filter_chip_text_color</item>
        <item name="chipIconEnabled">@drawable/ic_tag_close_24</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">29dp</item>
        <item name="iconStartPadding">5dp</item>
        <item name="chipIconSize">10dp</item>
        <item name="checkedIcon">@drawable/ic_tag_close_24</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="Colors_Widget.MaterialComponents.Chip.Filter2" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/color_filter_chip_background_color</item>
        <item name="android:textColor">@color/color_filter_chip_text_color</item>
        <item name="chipIconEnabled">@drawable/ic_tag_close_24</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">29dp</item>
        <item name="chipIconSize">10dp</item>
        <item name="checkedIcon">@drawable/ic_tag_close_24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>

    </style>


    <style name="RoundedTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/bg_tab_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_layout_bg</item>
        <item name="tabSelectedTextColor">@color/mms_pry_2</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/mukta_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavBarStyle" parent="Widget.Design.BottomNavigationView">
        <item name="tabRippleColor">@color/mms_pry_2</item>
        <item name="tabTextColor">@color/mms_black_2</item>
        <item name="itemIconTint">@color/mms_black_2</item>
        <item name="iconTint">@color/mms_black_2</item>
        <item name="fontFamily">@font/mukta_regular</item>

    </style>


</resources>