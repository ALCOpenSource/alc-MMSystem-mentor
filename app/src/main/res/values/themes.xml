<resources>
    <!-- Base application theme. -->
    <style name="Theme.AlcMMSystemmentor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mm_teal_900</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="circleImageShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="MMCircleProfileView">
        <item name="shapeAppearance">@style/circleImageShape</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="srcCompat">@mipmap/ic_launcher_round</item> <!-- As placeholder image -->
        <item name="contentDescription">@string/profile_image_description</item>
    </style>

    <style name="MMIconBtn" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MMButton" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>