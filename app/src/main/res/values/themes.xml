<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcMMSystemmentor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_2</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AlcMMSystemmentor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTabFont" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/mukta</item>
    </style>


    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Colors_Widget.MaterialComponents.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/color_filter_chip_background_color</item>
        <item name="android:textColor">@color/color_filter_chip_text_color</item>
        <item name="chipIconEnabled">@drawable/ic_tag_close_24</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">29dp</item>
        <item name="iconStartPadding">5dp</item>
        <item name="chipIconSize">10dp</item>
        <item name="checkedIcon">@drawable/ic_tag_close_24</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="Colors_Widget.MaterialComponents.Chip.Filter2" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/color_filter_chip_background_color</item>
        <item name="android:textColor">@color/color_filter_chip_text_color</item>
        <item name="chipIconEnabled">@drawable/ic_tag_close_24</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">29dp</item>
        <item name="chipIconSize">10dp</item>
        <item name="checkedIcon">@drawable/ic_tag_close_24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>

    </style>


    <style name="RoundedTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/bg_tab_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_layout_bg</item>
        <item name="tabSelectedTextColor">@color/mms_pry_2</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/mukta_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavBarStyle" parent="Widget.Design.BottomNavigationView">
        <item name="tabRippleColor">@color/mms_pry_2</item>
        <item name="tabTextColor">@color/mms_black_2</item>
        <item name="itemIconTint">@color/mms_black_2</item>
        <item name="iconTint">@color/mms_black_2</item>
        <item name="fontFamily">@font/mukta_regular</item>

    </style>

<style name="MMCircleProfileView">
<item name="shapeAppearance">@style/circleImageShape</item>
<item name="android:layout_width">64dp</item>
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>

    <item name="android:layout_height">wrap_content</item>
</style>

<style name="MMButton" parent="Widget.Material3.Button">
<item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Medium</item>
<item name="android:insetTop">0dp</item>
<item name="android:insetBottom">0dp</item>
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
</style>

<style name="MMButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
<item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Medium</item>
<item name="android:insetTop">0dp</item>
<item name="android:insetBottom">0dp</item>
<item name="iconPadding">0dp</item>
<item name="android:padding">0dp</item>
<item name="android:layout_height">wrap_content</item>
</style>

<style name="MMEditTextLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
<item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Small</item>
<item name="hintEnabled">true</item>
<item name="boxStrokeWidth">1dp</item>
<item name="boxStrokeWidthFocused">1dp</item>
<item name="android:layout_marginTop">10dp</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:layout_width">match_parent</item>
</style>

<style name="MMEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
<item name="android:layout_height">wrap_content</item>
<item name="android:layout_width">match_parent</item>
</style>

<style name="chip" parent="Widget.MaterialComponents.Chip.Choice">
<item name="chipBackgroundColor">@color/chip_background_selector</item>
<item name="chipStrokeColor">@color/chip_stroke_selector</item>
<item name="chipCornerRadius">5dp</item>
</style>

<style name="MMChip" parent="Widget.Material3.Chip.Filter">
<item name="chipBackgroundColor">@color/edit_profile_chip_background_selector</item>
<item name="chipStrokeColor">@color/edit_profile_chip_background_selector</item>
<item name="chipStrokeWidth">1dp</item>
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
<item name="chipMinTouchTargetSize">0dp</item>
<item name="android:textAlignment">center</item>
<item name="android:textSize">16sp</item>
<item name="chipIconTint">@color/mms_black_10</item>
<item name="chipIcon">@drawable/ic_close</item>
<item name="android:textColor">@color/chip_text_selector</item>
<item name="chipCornerRadius">5dp</item>
</style>

    <style name="MMIconBtn" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


<style name="circleImageShape" parent="">
<item name="cornerFamily">rounded</item>
<item name="cornerSize">50%</item>
</style>
<style name="retangleShape" parent="">
<item name="cornerFamily">rounded</item>
<item name="cornerSize">0%</item>
<item name="background">?backgroundColor</item>
</style>

<style name="MMSDialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
<item name="shapeAppearanceOverlay">@style/retangleShape</item>
</style>

</resources>

