<resources>
    <!-- Base application theme. -->
    <style name="Theme.AlcMMSystemmentor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mm_teal_900</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="circleImageShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MMCircleProfileView">
        <item name="shapeAppearance">@style/circleImageShape</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="srcCompat">@mipmap/ic_launcher_round</item> <!-- As placeholder image -->
        <item name="contentDescription">@string/profile_image_description</item>
    </style>

    <style name="MMIconBtn" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MMEditTextLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Small</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MMEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MMButton" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MMChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/edit_profile_chip_background_selector</item>
        <item name="chipStrokeColor">@color/edit_profile_chip_background_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="chipIconTint">@color/mms_black_10</item>
        <item name="chipIcon">@drawable/ic_close</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipCornerRadius">5dp</item>
    </style>
</resources>